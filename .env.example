#!/bin/bash
EXTERNAL='false' # set 'true' if this project is a submodule and should look for the .env file in the root directory of the parent project

REMOTE_IP='XXX.XXX.XXX.XXX' # remote IP adress
REMOTE_SSH_PRIVATE_KEY_PATH='~/.ssh/key' # local path for the private key to access the remote environment
REMOTE_SSH_PORT='22' # remote ssh port - unlikely to change
REMOTE_USER='user' # user with permissions to make changes on the remote environment
REMOTE_UPLOADS_FOLDER_PATH='/var/www/html/project/public/uploads' # Apostrophe's "uploads" folder path

REMOTE_DB_NAME='db-collection-name' # name of the remote MongoDB collection
REMOTE_DB_USER='user' # username for accesing the remote MongoDB collection
REMOTE_DB_PASS='password' # password for the user above
REMOTE_MONGO_BACKUPS_FOLDER_PATH='/var/www/html/mongodumps' # remote folder path for backing up the MongoDB collection - usually sits just above the project folder
REMOTE_MONGO_PORT='27017' # remote MongoDB port for MongoDB URI - unlikely to change
REMOTE_DB_EXTRA='authSource=admin&retryWrites=true&w=majority' # any extra flags for the final MongoDB URL

YOUR_PERSONAL_TAGNAME='user' # postfix assigned to the mongodump backup files - usually name of the user
LOCAL_UPLOADS_FOLDER_PATH='/public/uploads' # Apostrophe's "uploads" folder path

LOCAL_MONGO_BACKUPS_FOLDER_PATH='/mongodumps' # local folder for backing up the MongoDB collection
LOCAL_DB_NAME='db-collection-name'
LOCAL_MAC_ADRESSES='false' # set to 'true' on Mac devices - 'false' for Linux/UNIX
